<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - eBook Library</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.5/font/bootstrap-icons.min.css" rel="stylesheet" />
</head>
<body>
    <!-- סרגל הכלים -->
    <div class="container-fluid bg-primary py-3">
        <nav class="navbar navbar-expand-lg navbar-dark">
            <div class="container">
                <a class="navbar-brand" href="/HomePage/ShowBooks">eBook Library</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <!-- כפתור למעבר לעגלה -->
                        <li class="nav-item">
                            <a class="nav-link" href="/Cart/ViewCart">
                                <i class="bi bi-cart"></i> Cart
                            </a>
                        </li>
                        <!-- כפתור להוספת דירוג לשירות האתר -->
                        <li class="nav-item">
                            <a class="nav-link" href="/HomePage/RateUs">
                                <i class="bi bi-pencil"></i> Rate Us
                            </a>
                        </li>
                        <!-- כפתור למעבר לספרייה האישית -->
                        <li class="nav-item">
                            <a class="nav-link" href="/PersonalLibrary/showPersonalLibrary">
                                <i class="bi bi-book"></i> Personal Library
                            </a>
                        </li>
                        <!-- כפתור למעבר לדירוג השירות -->
                        <li class="nav-item">
                            <a class="nav-link" href="/HomePage/feedbacksAboutUs">
                                <i class="bi bi-chat-left-text"></i> What users think about our service
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </div>

    <!-- תוכן הדף -->
    <div class="container mt-4">
        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
