


<div class="container py-5">

    <!-- Header Section -->
    <div class="text-center mb-5">
        <h1 class="display-4 text-primary">
            Welcome <strong>@ViewBag.UserName</strong> to eBook
        </h1>

        <!-- Cart Button -->
        <div class="mt-4">
            <a href="/Cart/Index" class="btn btn-warning btn-lg">
                <i class="bi bi-cart"></i> Go to Cart
            </a>
        </div>
    </div>

    <!-- Search Section -->
    <div class="mb-4">
        <form method="get" action="/HomePage/ShowBooks">
            <div class="input-group">
                <input type="text"
                       name="searchQuery"
                       class="form-control"
                       placeholder="Search for a book..."
                       value="@ViewBag.SearchQuery">
                <button class="btn btn-primary" type="submit">Search</button>
            </div>
        </form>
    </div>

    <!-- Book Catalog Section -->
    <div>
        <h2>Book Catalog</h2>
        @if (Model == null)
        {
            <p>No books found!</p>
        }
        else
        {
            <div class="row row-cols-1 row-cols-md-3 g-4">
                @foreach (var book in Model)
                {
                    <div class="col">
                        <div class="card h-100">
                            <img src="@book.ImageUrl" class="card-img-top" alt="@book.Title">
                            <div class="card-body text-center">
                                <h5 class="card-title">@book.Title</h5>
                                <p class="card-text">
                                    <strong>Author:</strong> @book.Author <br>
                                    <strong>Publisher:</strong> @book.Publisher <br>
                                    <strong>Borrow Price:</strong> $@book.BorrowPrice <br>
                                    <strong>Buy Price:</strong> $@book.BuyPrice
                                </p>
                                <a href="/HomePage/BookDetails/@book.Id" class="btn btn-primary">View Details</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>
