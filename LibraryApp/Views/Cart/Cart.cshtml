@model List<cartItem>

<div class="container py-5">
    <h1 class="text-primary">Your Cart</h1>

    @if (Model == null || !Model.Any())
    {
        <p class="text-danger">Your cart is empty.</p>
    }
    else
    {
        <table class="table table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>Book Title</th>
                    <th>Author</th>
                    <th>Publisher</th>
                    <th>Year of Publication</th>
                    <th>Action Type</th>
                    <th>Added Date</th>
                    <th>Price</th>
                    <th>Buy/Borrow</th>
                    <th>Remove</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.BookTitle</td>
                        <td>@item.Author</td>
                        <td>@item.Publisher</td>
                        <td>@item.YearOfPublication</td>
                        <td>@(item.ActionType == "buy" ? "Buy" : "Borrow")</td>
                        <td>@item.AddedDate.ToShortDateString()</td>
                        <td>
                            @if (item.ActionType == "buy")
                            {
                                @item.PriceForBuy
                            }
                            else
                            {
                                @item.PriceForBorrow
                            }
                        </td>


                         <!-- טופס להחלפת סוג הפעולה -->
            <td>
                <form method="post" action="/Cart/ChangeActionType">
                    <input type="hidden" name="bookTitle" value="@item.BookTitle" />
                    <input type="hidden" name="author" value="@item.Author" />
                    <input type="hidden" name="publisher" value="@item.Publisher" />
                    <input type="hidden" name="yearOfPublication" value="@item.YearOfPublication" />

                                <select name="newActionType" class="form-select">
                                    @if (item.ActionType == "buy")
                                    {
                                        <option value="buy" selected>Buy</option>
                                        <option value="borrow">Borrow</option>
                                    }
                                    else if (item.ActionType == "borrow")
                                    {
                                        <option value="buy">Buy</option>
                                        <option value="borrow" selected>Borrow</option>
                                    }
                                </select>


                    <button type="submit" class="btn btn-primary mt-2">Change</button>
                </form>
            </td>

                        
                        
                        <td>
                            <form method="post" action="/Cart/RemoveFromCart" onsubmit="return confirmRemove()">
                                <input type="hidden" name="bookTitle" value="@item.BookTitle" />
                                <input type="hidden" name="author" value="@item.Author" />
                                <input type="hidden" name="publisher" value="@item.Publisher" />
                                <input type="hidden" name="yearOfPublication" value="@item.YearOfPublication" />

                                <button type="submit" class="btn btn-danger">Remove</button>

                            </form>
                        </td>



                        
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="5" class="text-end"><strong>Total:</strong></td>
                    <td colspan="3">
                        <strong>
                            $@Model.Sum(item => item.ActionType == "buy" ? item.PriceForBuy : item.PriceForBorrow)
                        </strong>
                    </td>
                </tr>
            </tfoot>
        </table>
    }

    <script>
        function confirmRemove() {
            return confirm("Are you sure you want to remove this book from your cart?");
        }
    </script>

    <div class="mt-3">
        <a href="/HomePage/ShowBooks" class="btn btn-primary">Continue Shopping</a>
    </div>


    <!-- Payment Button -->
    <div class="mt-4">
        <form method="post" action="/Payment/PayWithPayPal">
            <button type="submit" class="btn btn-success btn-lg">
                <i class="bi bi-paypal"></i> Pay with PayPal
            </button>
        </form>

    </div>


    <a href="/Payment/CreditCardPaymentPage" class="btn btn-success btn-lg">
        <i class="bi bi-credit-card"></i> Pay with Credit Card
    </a>



    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger mt-3">@TempData["ErrorMessage"]</div>
    }


</div>
